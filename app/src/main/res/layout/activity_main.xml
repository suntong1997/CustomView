<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:textAllCaps="false">


        <Button
            android:textAllCaps="false"
            android:id="@+id/custom_decoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recyclerview吸顶效果" />

        <Button
            android:id="@+id/qq_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ左滑删除效果" />

        <Button
            android:id="@+id/bt_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片翻转" />

        <Button
            android:id="@+id/bt_mi_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仿小米3D时钟" />

        <Button
            android:id="@+id/bt_coverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D画廊" />

        <Button
            android:id="@+id/bt_draglayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仿酷狗音乐侧边栏" />

        <Button
            android:id="@+id/bt_flowlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flowyout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_motion_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MotionLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_verification_code_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码输入框" />

        <Button
            android:id="@+id/bt_chartview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChartView"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>